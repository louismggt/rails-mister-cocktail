<div id="main_container">
  <div class="head_cocktail d-flex justify-content-between">
    <h1>Want to make a <%= @cocktail.name %> ?</h1>
    <%= link_to 'Edit Cocktail', new_cocktail_dose_path(@cocktail), class:'btn btn-link align-middle' %>
    </div>

  <div class="card-product">
    <%= cl_image_tag @cocktail.photo, height: 100, width: 400, crop: :fill %>
    <div class="card-product-infos">
      <% @cocktail.doses.each do |dose| %>
      <h2><%= dose.ingredient.name %></h2>
      <p><%= dose.description %></p>
      <%= link_to 'destroy', dose_path, method: :delete %>
    <% end %>
    </div>
  </div>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit %>
  <% end %>


  </div>
</div>
